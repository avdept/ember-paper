{{!-- send the backdrop to the same place as the content --}}
{{#if @dropdown.isOpen}}
  <MaybeInElement @destinationElement={{this.destinationElement}} @renderInPlace={{@renderInPlace}}>
    <PaperBackdrop class="md-select-backdrop md-click-catcher" @onClick={{action @dropdown.actions.close}}/>
  </MaybeInElement>
{{/if}}

<BasicDropdownContent
  {{did-insert this.animateIn}}
  {{will-destroy this.animateOut}}
  {{!-- proxy all the things that ebd gives us --}}
  @dropdown={{@dropdown}}
  @hPosition={{@hPosition}}
  @renderInPlace={{@renderInPlace}}
  @preventScroll={{@preventScroll}}
  @rootEventType={{@rootEventType}}
  @vPosition={{@vPosition}}
  @destination={{@destination}}
  @top={{@top}}
  @left={{@left}}
  @right={{@right}}
  {{!-- @width={{@width}} --}}
  @height={{@height}}
  @otherStyles={{this.customStyles}}
  @animationEnabled={{false}}

  @shouldReposition={{this.shouldReposition}}
  class="md-select-menu-container md-clickable {{if this.isActive "md-active"}}"

  ...attributes>

  {{! template-lint-disable no-invalid-interactive }}
  <md-select-menu class="md-default-theme {{if @searchEnabled "md-overflow"}}" {{on "keydown" this.handleKeyDown}}>
    {{yield}}
  </md-select-menu>
</BasicDropdownContent>
